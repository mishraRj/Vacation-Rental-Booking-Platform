<% layout("/layouts/boilerplate") %>

<div id="filters">
        <!-- Show All Listings -->
        <a href="/listings" class="filter">
            <div><i class="fa-solid fa-globe"></i></div>
            <p>All</p>
        </a>

        <% let categories = [
            { name: 'trending', icon: 'fa-fire-flame-curved' },
            { name: 'rooms', icon: 'fa-bed' },
            { name: 'mountains', icon: 'fa-mountain-city' },
            { name: 'castle', icon: 'fa-fort-awesome' },
            { name: 'swimming pool', icon: 'fa-water-ladder' },
            { name: 'beach', icon: 'fa-umbrella-beach' },
            { name: 'camp', icon: 'fa-tents' },
            { name: 'farm', icon: 'fa-tractor' },
            { name: 'arctic', icon: 'fa-snowman' },
            { name: 'tree house', icon: 'fa-tree' },
            { name: 'boat', icon: 'fa-ship' }
        ]; %>

        <% categories.forEach(category => { %>
            <a href="/listings?category=<%= category.name %>" class="filter">
                <% if(category.name === "castle") { %>
                    <div><i class="fa-brands <%= category.icon %>"></i></div>
                <% } else { %>
                    <div><i class="fa-solid <%= category.icon %>"></i></div>
                <% } %>
                <p><%= category.name.charAt(0).toUpperCase() + category.name.slice(1) %></p>
            </a>
        <% }); %>


<div class="tax-switch">
            <div class="form-check-reverse form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
            </div>
        </div>
</div>

<div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1 mt-3">
    <% for(let listing of allListings) { %>
        <a href="/listings/<%= listing._id %>" class="listing-link">
            <div class="col mb-4">
                <div class="card listing-card">
                    <img src="<%= listing.image.url %>" class="card-img-top" alt="listing image" style="height: 20rem;">
                    <!-- ❤️ Heart Button (Top-Right) -->
                    <button class="heart-btn">
                        <i class="fa-solid fa-heart"></i>
                    </button>
                    <div class="card-img-overlay">
                        <i class="fa-solid fa-map-marker-alt"></i> <%= listing.location %>, <%= listing.country %>
                    </div>
                    <div class="card-body">
                        <p class="card-text">
                            <b><%= listing.title %></b> <br>
                            &#8377;<%= listing.price.toLocaleString("en-IN") %> /night
                            <i class="tax-info">&nbsp; &nbsp; +18% GST</i>

                        </p>
                    </div>
                </div>
            </div>
        </a>
    <% } %>
</div>
